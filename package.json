    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare"
  },
  "devDependencies": {
    "@types/mark.js": "^8.11.12",
    "mark.js": "^8.11.1",
    "typescript": "^5.9.2",
    "wxt": "^0.20.6"
  },
  "dependencies": {
    "tippy.js": "^6.3.7",
    "webext-bridge": "^6.0.1"
  }
}
