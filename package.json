{
  "name": "loreleaf",
  "description": "A playful cross-browser extension for tracking story lore.",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
